<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@drawable/b"
    tools:context="com.example.pial.newovilist.LoginActivity">

    <Button
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:id="@+id/loginWithEmail"
        android:background="@drawable/custom_button"
        android:layout_centerHorizontal="true"
        android:text="Login With Email"
        android:textAllCaps="false"
        android:layout_marginTop="250dp"
        style="@style/Widget.AppCompat.Button.Colored"
        />
    <Button
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/custom_button"
        style="@style/Widget.AppCompat.Button.Colored"
        android:text="Sign Up"
        android:textAllCaps="false"
        android:layout_below="@id/loginWithEmail"
        android:layout_marginTop="20dp"
        android:id="@+id/signUp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/signUp"
        android:id="@+id/login_layout_or"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        >
        <View
            android:layout_width="200dp"
            android:layout_height="1dp"
            android:background="@color/colorPrimary"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="OR Login With"
            android:textColor="@color/textColor"
            android:textStyle="bold"
            />
        <View
            android:layout_width="200dp"
            android:layout_height="1dp"
            android:background="@color/colorPrimary"
            />
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    android:id="@+id/socialLayout"
    android:layout_below="@id/login_layout_or"
    android:layout_marginTop="20dp"
    >
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circle_24dp"
        android:src="@drawable/face"

        />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circle_24dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/google"
        />
</LinearLayout>

</RelativeLayout>
